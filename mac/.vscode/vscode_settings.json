{
  "editor.fontFamily": "$VSCODE_FONT_FAMILY",
  "editor.fontSize": "$VSCODE_FONT_SIZE",
  "editor.fontLigatures": "$VSCODE_FONT_LIGATURES",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },
  "editor.formatOnSave": true,
  "files.associations": {
    "*.tmux.conf": "plaintext"
  },
  "[plaintext]": {
    "editor.formatOnSave": false
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "mads-hartmann.bash-ide-vscode",
    "editor.formatOnSave": false
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "git.openRepositoryInParentFolders": "always",
  "chat.commandCenter.enabled": false,
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "colorize.colorized_colors": [
    "HEXA",
    "ARGB",
    "BROWSERS_COLORS",
    "RGB",
    "HSL",
    "OKLAB",
    "OKLCH"
  ],
  "colorize.languages": [
    "css",
    "sass",
    "scss",
    "less",
    "postcss",
    "sss",
    "stylus",
    "xml",
    "svg",
    "bash",
    "shell",
    "shellscript",
    "python",
    "json",
    "javascript",
    "typescript"
  ],

  "workbench.colorCustomizations": {
    "activityBar.border": "$VSCODE_ACTIVITY_BAR_BORDER",
    "badge.background": "$VSCODE_BADGE_BACKGROUND",
    "editor.foreground": "$VSCODE_EDITOR_FOREGROUND",
    "editor.background": "$VSCODE_EDITOR_BACKGROUND",
    "scrollbarSlider.activeBackground": "$VSCODE_SCROLLBAR_SLIDER_ACTIVE_BACKGROUND",
    "scrollbarSlider.hoverBackground": "$VSCODE_SCROLLBAR_SLIDER_HOVER_BACKGROUND",
    "sideBar.background": "$VSCODE_SIDEBAR_BACKGROUND",
    "sideBar.foreground": "$VSCODE_SIDEBAR_FOREGROUND",
    "sideBarSectionHeader.background": "$VSCODE_SIDEBAR_SECTION_HEADER_BACKGROUND",
    "sideBarSectionHeader.foreground": "$VSCODE_SIDEBAR_SECTION_HEADER_FOREGROUND",
    "statusBar.foreground": "$VSCODE_STATUSBAR_FOREGROUND",
    "statusBar.background": "$VSCODE_STATUSBAR_BACKGROUND",
    "list.activeBackground": "$VSCODE_LIST_ACTIVE_BACKGROUND",
    "list.inactiveSelectionBackground": "$VSCODE_LIST_INACTIVE_SELECTION_BACKGROUND"
  }
}
