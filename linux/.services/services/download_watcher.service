[Unit]
Description=Download watcher
After=network.target

[Service]
ExecStart=/usr/local/bin/download_watcher
Restart=always
User=solipsist
Group=solipsist
StandardOutput=append:/home/solipsist/logs/download_watcher.log
StandardError=append:/home/solipsist/logs/download_watcher.err
EnvironmentFile=/etc/default/download_watcher.conf

[Install]
WantedBy=multi-user.target
