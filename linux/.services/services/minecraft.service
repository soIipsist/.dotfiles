[Unit]
Description=Minecraft Server
After=network.target

[Service]
User=steam
Nice=1
KillMode=none
ProtectHome=true
WorkingDirectory=/home/steam/minecraft_server
ExecStart=/usr/bin/java -Xmx2G -Xms2G -jar minecraft_server.jar nogui
Restart=on-failure
StandardOutput=append:/var/log/minecraft.log
StandardError=append:/var/log/minecraft.log

[Install]
WantedBy=multi-user.target